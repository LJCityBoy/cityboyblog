<!--发表输入-->
<fieldset>
    {{#if code}}
        <div id="successalt" class="alert {{statues}}">
            <a href="#" class="close" data-dismiss="alert">
                &times;
            </a>
            <strong>{{message}}</strong>
        </div>
        <script>
            var tim = setInterval(function () {
                $("#successalt").alert('close');
                clearInterval(tim);
            },5000);
        </script>
    {{/if}}

</fieldset>
<form action="/post" method="post" class="well form-inline center-block" style="text-align: center">
    <input type="text" class="col-sm-10" name="post" value={{content}}>
    <button class="btn btn-success"><i class="glyphicon glyphicon-share"> 发言</i></button>
</form>

{{#if essays}}
    <div class="row">
    {{#each essays}}

            <div class="col-sm-4">
                <h2>{{user}}：</h2>
                <p>{{contents}}</p>
                <i>{{date}}</i>
            </div>

    {{/each}}
    </div>
{{/if}}





